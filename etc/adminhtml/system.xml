<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="ame" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>AME</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="api_user" translate="label" type="text" sortOrder="70" showInDefault="1">
                    <label>Client ID</label>
                    <comment><![CDATA[Client_id pertence a empresa que gerencia o e-commerce ou integração própria.]]></comment>
                    <validate>required-entry validate-uuid</validate>
                </field>
                <field id="api_password" translate="label" type="text" sortOrder="80" showInDefault="1">
                    <label>Access Token</label>
                    <comment><![CDATA[Access_token chave fixa utilizada pelos estabelecimento. Cada CNPJ possui seu próprio access_token.]]></comment>
                    <validate>required-entry validate-uuid</validate>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ambiente</label>
                    <source_model>GumNet\AME\Model\Values\Config\Environment</source_model>
                </field>
                <field id="trust_wallet_enabled" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Trust Wallet</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="order_status_created" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Status de ordem criada</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                </field>
                <field id="order_status_payment_received" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Status de pagamento confirmado</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                </field>
                <field id="address_street" translate="label" type="select" sortOrder="130" showInDefault="1">
                    <label>Rua</label>
                    <source_model>GumNet\AME\Model\Values\Config\AddressLines</source_model>
                </field>
                <field id="address_number" translate="label" type="select" sortOrder="140" showInDefault="1">
                    <label>Número</label>
                    <source_model>GumNet\AME\Model\Values\Config\AddressLines</source_model>
                </field>
                <field id="address_neighborhood" translate="label" type="select" sortOrder="150" showInDefault="1">
                    <label>Bairro</label>
                    <source_model>GumNet\AME\Model\Values\Config\AddressLines</source_model>
                </field>
                <!-- temporarily disabled feature
                <field id="show_cashback_products_list" translate="label" type="select" sortOrder="160" showInDefault="1">
                    <label>Exibir informações de cashback na lista de produtos</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                -->
            </group>
        </section>
    </system>
</config>
